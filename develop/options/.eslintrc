---
parserOptions:
  parser: 'babel-eslint'
extends:
  - 'plugin:vue/recommended'
env:
  es6: true
rules:
  no-console: off
  space-in-parens: error
  indent:
    - error
    - 2
  quotes:
    - error
    - single
  semi:
    - error
    - always
  prefer-const: error
  quote-props:
    - warn
    - 'consistent-as-needed'
  space-infix-ops: error
  prefer-template: warn
  no-array-constructor: warn
  no-new-object: warn
  no-var: error
  eqeqeq:
    - error
    - smart
  jsx-quotes:
    - error
    - 'prefer-single'
  camelcase: warn
  arrow-spacing: error
  object-curly-spacing:
    - error
    - always
  arrow-parens:
    - warn
    - 'as-needed'
  key-spacing: error
  comma-spacing:
    - error
    - before: false
      after: true
  comma-style:
    - error
    - last
  vue/require-default-prop: off
  vue/max-attributes-per-line:
    - error
    - singleline: 3
      multiline:
        - max: 1
        - allow-first-line: false
